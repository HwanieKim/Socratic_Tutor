# PolyGlot Socratic Tutor - Environment Configuration
# Copy this file to .env and fill in your API keys

# Required API Keys
GOOGLE_API_KEY="your_google_api_key_here"
VOYAGE_API_KEY="your_voyage_api_key_here"
LLAMA_CLOUD_API_KEY="your_llamacloud_api_key_here"

# Railway Production Settings
# Database (Railway provides this automatically)
DATABASE_URL="postgresql://username:password@host:port/database"

# Railway Volume (Railway provides this automatically)
RAILWAY_VOLUME_MOUNT_PATH="/app/data"

# Optional Development Settings
DEBUG_MODE="false"
PORT="7860"

# Local Development Overrides (only for local testing)
# Uncomment these for local development without Railway
# DATABASE_URL="postgresql://localhost:5432/rag_tutor_dev"
# RAILWAY_VOLUME_MOUNT_PATH="./local_data"
